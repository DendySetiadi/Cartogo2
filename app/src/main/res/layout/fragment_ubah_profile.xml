<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UbahProfile">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/rectangle_29"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageView
        android:id="@+id/profil"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/baseline_account_circle_24"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_background"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:outlineProvider="background"/>

    <Button
        android:id="@+id/gantiProfil"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:text="Ubah Foto"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp"
        android:text="Nama"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editnama"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="200dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:text="Email"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editemail"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="270dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/telpon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp"
        android:text="Nomor Telepon"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittelepon"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="340dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/jk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        android:text="Jenis Kelamin"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editjk"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="410dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/simpan"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:text="Simpan"
        android:textSize="12dp" />

</RelativeLayout>