<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daftar">

    <ImageView
        android:id="@+id/putihatas2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/putihatas" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/cartogologo"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="85dp"
        android:id="@+id/cartogologo2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="230dp"
        android:text="Hallo, Selamat datang di CartoGo"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/daftar" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="275dp"
        android:hint="Masukkan Email "
        app:boxBackgroundColor="@color/abumuda" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/masukemail2"
            android:layout_width="303dp"
            android:layout_height="55dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayout"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="365dp"
        android:hint="Masukkan Password"
        app:boxBackgroundColor="@color/abumuda"
        app:endIconMode="password_toggle" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/masukpassword"
            android:layout_width="303dp"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="428dp"
            android:layout_height="760dp"
            app:srcCompat="@drawable/rectangle_29"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-2dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="455dp"
        android:hint="Konfirmasi Password"
        app:endIconMode="password_toggle"
        app:boxBackgroundColor="@color/abumuda" >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="303dp"
            android:layout_height="55dp"
            android:id="@+id/konfirmasipassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/tomboldaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tombolmasuk"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="95dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textSize="20dp"
        android:layout_marginTop="549dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/daftar2"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah punya akun? Masuk"
        android:textSize="12dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="105dp"
        android:id="@+id/masuk"
        android:textColor="@color/abu" />

</RelativeLayout>